<?xml version="1.0" encoding="utf-8"?>  <LinearLayout           android:layout_width="fill_parent"           xmlns:android="http://schemas.android.com/apk/res/android"           android:orientation="horizontal"          android:layout_height="wrap_content"           android:id="@+id/MyListItem"           android:paddingBottom="3dip"           android:background="@+drawable/kuangjia"                 android:layout_marginLeft="2dp"   		android:layout_marginRight="2dp"        android:paddingLeft="10dip">          <TextView                   android:layout_height="35sp"                   android:layout_width="wrap_content"                   android:id="@+id/textView"     				android:textColor="#000000"  				android:layout_marginTop="5dp"   				 android:layout_gravity="center"                android:textSize="20sp">          </TextView>          <TextView                   android:layout_height="35sp"                   android:layout_width="wrap_content"                   android:id="@+id/item_id"   				android:layout_weight="1"				 android:layout_gravity="center"				android:textColor="#000000"                android:textSize="20sp">          </TextView>        <ToggleButton            android:id="@+id/toggleButton1"            android:layout_width="45dp"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:checked="false"            android:layout_marginTop="3dp"             android:onClick="btnClick"            android:text="ToggleButton" />      </LinearLayout> 