ndroid:textColor="#000000"	    android:text="点击“更改wifi”按钮，在wifi列表中选择名为“HF-A11”的wifi，连接完成后，进入Step2" />	<Button	    android:id="@+id/button1"	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	    android:text="更改wifi" />	<TextView	    android:id="@+id/textView2"	    android:layout_width="wrap_content"	    android:layout_height="wrap_content"	    android:textSize="20sp"	    android:textColor="#000000"	    android:text="Step 2:" />	<TextView	    android:id="@+id/textView6"	    android:layout_width="wrap_content"	    android:layout_height="wrap_content"	    android:textColor="#000000"	    android:text="在如下编辑框中输入家中wifi的名称与密码，之后点击发送，等待提示完成后进入Step3" />	<LinearLayout	    android:layout_width="match_parent"	    	    android:layout_height="wrap_content" >        <LinearLayout	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	    android:layout_weight="1"	    android:orientation="vertical" >        	<TextView	    android:id="@+id/textView3"	    android:layout_width="wrap_content"	    android:layout_height="wrap_content"	    android:textColor="#000000"	    android:text="SSID:" />        	<EditText	    android:id="@+id/editText1"	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	    android:layout_marginRight="5dp"	    android:ems="10" >		    <requestFocus />	</EditText>	</LinearLayout>	                	<LinearLayout	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	   	android:layout_weight="1"	    android:orientation="vertical" >     <TextView	    android:id="@+id/textView4"	    android:layout_width="wrap_content"	    android:textColor="#000000"	    android:layout_height="wrap_content"	    android:text="PASS:" />     	<EditText	    android:id="@+id/editText2"	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	    android:ems="10" />	</LinearLayout>	</LinearLayout>	<Button	    android:id="@+id/button2"	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	    android:text="发送" />	<TextView	    android:id="@+id/scanResult"	    android:layout_width="fill_parent"	    android:layout_height="wrap_content"	    android:textColor="#000000"	    android:textSize="20sp"	    android:text="Step 3:"	    />		<TextView	    android:id="@+id/textView7"	    android:layout_width="wrap_content"	    android:layout_height="wrap_content"	    android:textColor="#000000"	    android:text="点击如下“接回家中wifi”按钮，重新连回家中wifi" />		<Button	    android:id="@+id/button3"	    android:layout_width="match_parent"	    android:layout_height="wrap_content"	    android:text="接回家中wifi" />	<TextView	    android:id="@+id/textView9"	    android:layout_width="wrap_content"	    android:layout_height="wrap_content"	    android:text="  " />	<TextView	    android:id="@+id/textView8"	    android:layout_width="wrap_content"	    android:layout_height="wrap_content"	    android:textColor="#000000"	    android:text="点击“确认”，完成设备添加" />	<Button	    android:id="@+id/button4"	    android:layout_width="fill_parent"	    android:layout_height="wrap_content"	    android:text="确认" />	</LinearLayout></ScrollView>